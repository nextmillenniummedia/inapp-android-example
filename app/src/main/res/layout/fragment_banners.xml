<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.BannersFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/banner" />

    <com.nextmillennium.inappsdk.core.ui.InAppBannerView
        android:id="@+id/banner_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/banner_medium_rectangle" />

    <com.nextmillennium.inappsdk.core.ui.InAppBannerView
        android:id="@+id/banner_mrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/banner_anchored" />

    <com.nextmillennium.inappsdk.core.ui.InAppBannerView
        android:id="@+id/banner_anchored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>