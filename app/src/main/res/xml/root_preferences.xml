<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Banners">

        <EditTextPreference
            app:key="banner"
            app:title="Mobile Leaderboard"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="banner_mrec"
            app:title="Medium Rectangle"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="banner_anchored"
